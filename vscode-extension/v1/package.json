{
  "name": "ai-agent-extension",
  "displayName": "AI Agent Interaction",
  "description": "Interact with AI agents directly from VSCode with integrated configuration management",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["AI", "Developer Tools"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-agent.startConversation",
        "title": "Agent: Start Conversation"
      },
      {
        "command": "ai-agent.switchProvider",
        "title": "Agent: Settings"
      },
      {
        "command": "ai-agent.switchModel",
        "title": "Agent: Switch Model"
      },
      {
        "command": "ai-agent.resetSession",
        "title": "Agent: Reset Session"
      },
      {
        "command": "ai-agent.showStatistics",
        "title": "Agent: Show Statistics",
        "icon": "$(graph)"
      },
      {
        "command": "ai-agent.showTraceViewer",
        "title": "Agent: Show Trace Viewer",
        "icon": "$(list-tree)"
      },
      {
        "command": "ai-agent.refreshTraces",
        "title": "Refresh Traces",
        "icon": "$(refresh)"
      },
      {
        "command": "ai-agent.toggleAutoRefresh",
        "title": "Toggle Auto-Refresh",
        "icon": "$(sync)"
      },
      {
        "command": "ai-agent.exportTraces",
        "title": "Export Traces",
        "icon": "$(export)"
      },
      {
        "command": "ai-agent.clearTraces",
        "title": "Clear All Traces",
        "icon": "$(trash)"
      },
      {
        "command": "ai-agent.sendSelection",
        "title": "Agent: Send Selection to Agent",
        "icon": "$(sparkle)"
      },
      {
        "command": "ai-agent.sendFile",
        "title": "Agent: Send File to Agent",
        "icon": "$(file-code)"
      },
      {
        "command": "ai-agent.showCodeSuggestions",
        "title": "Agent: Show Code Suggestions",
        "icon": "$(lightbulb)"
      }
    ],
    "configuration": {
      "title": "AI Agent",
      "properties": {
        "aiAgent.mode": {
          "type": "string",
          "enum": ["single", "multi"],
          "default": "single",
          "description": "Agent mode: single-agent or multi-agent (Plan+Act)"
        },
        "aiAgent.provider": {
          "type": "string",
          "default": "mock",
          "enum": ["mock", "ollama", "openai", "anthropic", "google", "azure-openai"],
          "description": "LLM provider to use (single-agent mode)"
        },
        "aiAgent.model": {
          "type": "string",
          "default": "llama2",
          "description": "Model name for the selected provider (single-agent mode)"
        },
        "aiAgent.baseUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Base URL for Ollama (if using ollama provider)"
        },
        "aiAgent.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for cloud providers",
          "markdownDescription": "API key for cloud providers (OpenAI, Anthropic, etc.)"
        },
        "aiAgent.maxTurns": {
          "type": "number",
          "default": 5,
          "description": "Maximum conversation turns"
        },
        "aiAgent.timeout": {
          "type": "number",
          "default": 30,
          "description": "Request timeout in seconds"
        },
        "aiAgent.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for LLM sampling (0-2)"
        },
        "aiAgent.plan.provider": {
          "type": "string",
          "default": "mock",
          "enum": ["mock", "ollama", "openai", "anthropic", "google", "azure-openai"],
          "description": "LLM provider for Plan stage (multi-agent mode)"
        },
        "aiAgent.plan.model": {
          "type": "string",
          "default": "llama2",
          "description": "Model name for Plan stage (multi-agent mode)"
        },
        "aiAgent.plan.baseUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Base URL for Plan stage (Ollama)"
        },
        "aiAgent.plan.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Plan stage (cloud providers)"
        },
        "aiAgent.plan.maxTurns": {
          "type": "number",
          "default": 3,
          "description": "Maximum turns for Plan stage"
        },
        "aiAgent.plan.timeout": {
          "type": "number",
          "default": 30,
          "description": "Timeout for Plan stage (seconds)"
        },
        "aiAgent.plan.temperature": {
          "type": "number",
          "default": 0.5,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for Plan stage"
        },
        "aiAgent.act.provider": {
          "type": "string",
          "default": "mock",
          "enum": ["mock", "ollama", "openai", "anthropic", "google", "azure-openai"],
          "description": "LLM provider for Act stage (multi-agent mode)"
        },
        "aiAgent.act.model": {
          "type": "string",
          "default": "llama2",
          "description": "Model name for Act stage (multi-agent mode)"
        },
        "aiAgent.act.baseUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Base URL for Act stage (Ollama)"
        },
        "aiAgent.act.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Act stage (cloud providers)"
        },
        "aiAgent.act.maxTurns": {
          "type": "number",
          "default": 5,
          "description": "Maximum turns for Act stage"
        },
        "aiAgent.act.timeout": {
          "type": "number",
          "default": 30,
          "description": "Timeout for Act stage (seconds)"
        },
        "aiAgent.act.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for Act stage"
        },
        "aiAgent.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose debug logging for multi-agent orchestration",
          "markdownDescription": "Enable verbose debug logging for multi-agent orchestration. Shows Plan and Act stage execution details in the Extension Host console."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-agent-panel",
          "title": "AI Agent",
          "icon": "$(sparkle)"
        }
      ]
    },
    "views": {
      "ai-agent-panel": [
        {
          "id": "ai-agent.traceViewer",
          "name": "Trace Viewer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ai-agent.refreshTraces",
          "when": "view == ai-agent.traceViewer",
          "group": "navigation"
        },
        {
          "command": "ai-agent.toggleAutoRefresh",
          "when": "view == ai-agent.traceViewer",
          "group": "navigation"
        },
        {
          "command": "ai-agent.exportTraces",
          "when": "view == ai-agent.traceViewer",
          "group": "navigation"
        },
        {
          "command": "ai-agent.clearTraces",
          "when": "view == ai-agent.traceViewer"
        }
      ],
      "editor/context": [
        {
          "command": "ai-agent.sendSelection",
          "when": "editorHasSelection",
          "group": "aiAgent@1"
        },
        {
          "command": "ai-agent.sendFile",
          "when": "editorTextFocus",
          "group": "aiAgent@2"
        }
      ],
      "commandPalette": [
        {
          "command": "ai-agent.sendSelection",
          "when": "editorHasSelection"
        },
        {
          "command": "ai-agent.sendFile",
          "when": "editorIsOpen"
        },
        {
          "command": "ai-agent.showCodeSuggestions"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "jest",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
